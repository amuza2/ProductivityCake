<UserControl
    d:DesignHeight="550"
    d:DesignWidth="350"
    mc:Ignorable="d"
    x:Class="ProductivityCake.Views.TaskCreationView"
    x:DataType="vm:TaskCreationViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ProductivityCake.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:TaskCreationViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="Auto, *, Auto">
        <!--  header  -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button
                Background="Transparent"
                Command="{Binding NavigateToTaskListCommand}"
                Content="â†"
                FontSize="18" />
            <TextBlock
                FontWeight="Bold"
                Text="New Task"
                VerticalAlignment="Center" />
        </StackPanel>

        <!--  Form  -->
        <Grid
            Grid.Row="1"
            Margin="0,20,0,0"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto"
            RowSpacing="20">

            <!--  Task Name  -->
            <Grid RowDefinitions="Auto, Auto" RowSpacing="5">
                <TextBlock FontWeight="SemiBold" Text="What is to be done?" />
                <Grid ColumnDefinitions="*, Auto,Auto" Grid.Row="1">
                    <TextBox Text="{Binding Title}" />
                    <Button Background="Transparent" Grid.Column="1">
                        <PathIcon Data="{StaticResource mic_on_regular}" />
                    </Button>
                    <Button
                        Background="Transparent"
                        Command="{Binding ClearTitleCommand}"
                        Grid.Column="2"
                        IsVisible="{Binding Title, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <PathIcon Data="{StaticResource erase_regular}" />
                    </Button>
                </Grid>
            </Grid>

            <!--  Task date & time  -->
            <Grid
                Grid.Row="1"
                RowDefinitions="Auto,Auto,Auto"
                RowSpacing="8">
                <TextBlock FontWeight="SemiBold" Text="Due date" />

                <!--  Date picker  -->
                <Grid ColumnDefinitions="*, Auto" Grid.Row="1">
                    <TextBox
                        IsReadOnly="True"
                        Text="{Binding DateTextFormat}"
                        Watermark="Date not set" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <DatePicker
                            DayFormat="ddd dd"
                            Opacity="0"
                            SelectedDate="{Binding SelectedDate}"
                            Width="0"
                            x:Name="MyDatePicker" />
                        <Button
                            Background="Transparent"
                            Command="{Binding OpenDatePickerCommand}"
                            CommandParameter="{Binding #MyDatePicker}">
                            <PathIcon Data="{StaticResource calendar_regular}" />
                        </Button>
                        <Button
                            Background="Transparent"
                            Command="{Binding ClearDateCommand}"
                            IsVisible="{Binding SelectedDate, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <PathIcon Data="{StaticResource erase_regular}" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  time picker  -->
                <Grid
                    ColumnDefinitions="*, Auto"
                    Grid.Row="2"
                    IsVisible="{Binding SelectedDate, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBox
                        IsReadOnly="True"
                        Text="{Binding TimeTextFormat}"
                        VerticalContentAlignment="Center"
                        Watermark="Time not set (all day)" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TimePicker
                            Opacity="0"
                            SelectedTime="{Binding SelectedTime}"
                            Width="0"
                            x:Name="MyTimePicker" />
                        <Button
                            Background="Transparent"
                            Command="{Binding OpenTimePickerCommand}"
                            CommandParameter="{Binding #MyTimePicker}">
                            <PathIcon Data="{StaticResource clock_regular}" />
                        </Button>
                        <Button
                            Background="Transparent"
                            Command="{Binding ClearTimeCommand}"
                            IsVisible="{Binding SelectedTime, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <PathIcon Data="{StaticResource erase_regular}" />
                        </Button>

                    </StackPanel>
                </Grid>
            </Grid>

            <!--  Repeat Task  -->
            <StackPanel Grid.Row="2" Spacing="5">
                <TextBlock FontWeight="SemiBold" Text="Repeat" />
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <ComboBox
                        DisplayMemberBinding="{Binding Name}"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding RepeatTypes}"
                        MinWidth="100"
                        SelectedItem="{Binding SelectedRepeat}" />
                    <Button Grid.Column="1" Opacity="0">
                        <PathIcon Data="{StaticResource erase_regular}" />
                    </Button>
                    <Button Grid.Column="2" Opacity="0">
                        <PathIcon Data="{StaticResource erase_regular}" />
                    </Button>
                </Grid>
            </StackPanel>

            <!--  Categories  -->
            <Grid
                ColumnDefinitions="*, Auto, Auto"
                Grid.Row="3"
                RowDefinitions="Auto, Auto"
                RowSpacing="5">
                <TextBlock
                    FontWeight="SemiBold"
                    Grid.Row="0"
                    Text="Add to Category" />
                <ComboBox
                    DisplayMemberBinding="{Binding Name}"
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    ItemsSource="{Binding Categories}"
                    MinWidth="100"
                    SelectedItem="{Binding SelectedCategory}" />
                <Button
                    Background="Transparent"
                    Command="{Binding OpenCategoryFlyoutCommand}"
                    CommandParameter="{Binding #CategoryButton}"
                    Grid.Column="1"
                    Grid.Row="1"
                    x:Name="CategoryButton">
                    <PathIcon Data="{StaticResource text_bullet_list_add_regular}" />

                    <Button.Flyout>
                        <Flyout Placement="TopEdgeAlignedRight">
                            <StackPanel Margin="10" Spacing="5">
                                <TextBlock Text="Enter Category:" />
                                <TextBox Text="{Binding NewCategoryName}" Width="200" />

                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button
                                        Command="{Binding AddCategoryCommand}"
                                        CommandParameter="{Binding #CategoryButton}"
                                        Content="Add" />
                                    <Button
                                        Command="{Binding CancelCategoryCommand}"
                                        CommandParameter="{Binding #CategoryButton}"
                                        Content="Cancel" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button
                    Background="Transparent"
                    Grid.Column="2"
                    Grid.Row="1"
                    Opacity="0">
                    <PathIcon Data="{StaticResource erase_regular}" />
                </Button>
            </Grid>

            <TextBlock
                FontSize="14"
                Foreground="Red"
                Grid.ColumnSpan="2"
                Grid.Row="4"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Text="{Binding ErrorMessage}" />
        </Grid>

        <Button
            Command="{Binding SaveCommand}"
            CornerRadius="30"
            FontSize="24"
            Grid.Row="2"
            Height="50"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            VerticalAlignment="Bottom"
            VerticalContentAlignment="Center"
            Width="50">
            <PathIcon Data="{StaticResource checkmark_regular}" />
        </Button>
    </Grid>

</UserControl>