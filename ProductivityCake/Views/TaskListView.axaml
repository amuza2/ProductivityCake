<UserControl
    d:DesignHeight="550"
    d:DesignWidth="350"
    mc:Ignorable="d"
    x:Class="ProductivityCake.Views.TaskListView"
    x:DataType="vm:TaskListViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ProductivityCake.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:TaskListViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="Auto, *, Auto">
        <!--  header  -->
        <Grid ColumnDefinitions="Auto, *">
            <ComboBox
                IsVisible="{Binding !InSearchMode}"
                ItemsSource="{Binding ListFilter}"
                SelectedItem="{Binding SelectedFilter}"
                Width="130" />

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                IsVisible="{Binding !InSearchMode}"
                Orientation="Horizontal"
                Spacing="10">
                <Button Background="Transparent" Command="{Binding ToggleSearchModeCommand}">
                    <PathIcon Data="{StaticResource search_regular}" />
                </Button>
                <Button Background="Transparent">
                    <PathIcon Data="{StaticResource more_vertical_regular}" />
                </Button>
            </StackPanel>

            <!--  Search Mode  -->
            <StackPanel
                Grid.Column="0"
                Grid.ColumnSpan="2"
                IsVisible="{Binding InSearchMode}"
                Orientation="Horizontal">
                <Button
                    Background="Transparent"
                    Command="{Binding ToggleSearchModeCommand}"
                    Content="â†"
                    FontSize="18"
                    IsVisible="{Binding InSearchMode}" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock FontSize="18" VerticalAlignment="Center">
                        <PathIcon Data="{StaticResource search_regular}" />
                    </TextBlock>
                    <TextBox
                        Background="Transparent"
                        BorderThickness="0"
                        Text="{Binding SearchText}"
                        VerticalContentAlignment="Center"
                        Watermark="Search"
                        Width="250" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  list content  -->
        <ScrollViewer Grid.Row="1">
            <Grid>
                <ListBox
                    ItemsSource="{Binding TodoItems}"
                    Margin="0,10"
                    SelectedItem="{Binding SelectedItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderBrush="Blue"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="4">
                                <Grid ColumnDefinitions="Auto, *">
                                    <CheckBox IsChecked="{Binding}" />
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}" />
                                        <TextBlock Foreground="{Binding DueDate, Converter={StaticResource DueDateToColorConverter}}" Text="{Binding DueDate, Converter={StaticResource DueDateConverter}}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    Command="{Binding NavigateToTaskCreationViewCommand}"
                    Content="+"
                    CornerRadius="30"
                    FontSize="24"
                    Height="50"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Center"
                    Margin="16"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Width="50" />
            </Grid>
        </ScrollViewer>
    </Grid>

</UserControl>
