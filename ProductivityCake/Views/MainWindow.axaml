<Window
    Height="550"
    Icon="/Assets/avalonia-logo.ico"
    Title="ProductivityCake"
    Width="350"
    d:DesignHeight="550"
    d:DesignWidth="350"
    mc:Ignorable="d"
    x:Class="ProductivityCake.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ProductivityCake.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*, Auto">
        <!--  page content  -->
        <ContentControl Content="{Binding CurrentViewModel}" />

        <!--  footer  -->
        <Grid
            ColumnDefinitions="*,*"
            Grid.Row="1"
            Margin="0,5">
            <Button
                Background="Transparent"
                Command="{Binding NavigateToTasksPageCommand}"
                HorizontalAlignment="Center">
                <PathIcon Data="{StaticResource tasks_app_regular}" />
            </Button>

            <Button
                Background="Transparent"
                Command="{Binding NavigateToTimerPageCommand}"
                Grid.Column="1"
                HorizontalAlignment="Center">
                <PathIcon Data="{StaticResource clock_regular}" />
            </Button>
        </Grid>
    </Grid>

</Window>
